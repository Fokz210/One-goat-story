void Titry()
    {
    int t = 0;

    while (t <= 100)
        {
        t++;
        txSetColor (TX_BLACK);
        txTextOut (-600+t*18, 200, "История одного козла (часть 2) (Автор: Иван Черемисенов)");

        txSleep (70);
        txSetFillColor (TX_WHITE);
        txClear();
        }
    }

